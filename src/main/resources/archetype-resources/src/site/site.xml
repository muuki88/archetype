<?xml version="1.0" encoding="ISO-8859-1"?>

<project name="${artifactId}" xmlns="http://maven.apache.org/DECORATION/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/DECORATION/1.0.0 http://maven.apache.org/xsd/decoration-1.0.0.xsd">
	<bannerLeft>
		<name>${artifactId}</name>
		<src>img/your-banner.png</src>
		<href>http://example.com</href>
	</bannerLeft>

	<skin>
		<groupId>org.apache.maven.skins</groupId>
		<artifactId>maven-fluido-skin</artifactId>
		<version>1.3.0</version>
	</skin>

	<body>
		<links>
			<item name="Source Code" href="https://github.com/${repository}" />
		</links>

		<menu>
			<item name="${artifactId}" href="index.html" />
			<item name="Getting started" href="getting-started.html" />
			<item name="FAQ" href="faq.html" />
		</menu>
		<menu ref="reports" />
	</body>

	<custom>
		<fluidoSkin>
			<sourceLineNumbersEnabled>true</sourceLineNumbersEnabled>
			<gitHub>
				<projectId>${repository}</projectId>
			</gitHub>
		</fluidoSkin>
	</custom>
</project>
